<section>
  <table>
    <tr class="top">
      <th>
        <%= image_tag '/images/top.png', size: '300x200', alt: 'top' %>
      </th>
      <td>
        <% Costume.top.each do |cos| %>
          <%= link_to image_tag("/images/top_#{cos.color}.jpg", size: '120x95', alt: 'top'), cos %>
        <% end %>
      </td>
    </tr>

    <tr class="bottom">
      <th>
        <%= image_tag '/images/bottom.png', size: '300x200', alt: 'bottom' %>
      </th>
      <td>
        <% Costume.bottom.each do |cos| %>
          <%= "images/bottom_#{cos.color}.png" %>
        <% end %>
      </td>
    </tr>

    <tr class="boots">
      <th>
        <%= image_tag '/images/boots.png', size: '200x150', alt: 'boots' %>
      </th>
      <td>
        <% Costume.boots.each do |cos| %>
          <%= "images/boots_#{cos.color}.png" %>
        <% end %>
      </td>
    </tr>
  </table>
</section>

<section>
  <div class="form">
    <%= form_for @costume do |f| %>
      <%= f.select :kind, [['トップス', 'top'], ['ボトムス','bottom'], ['ひざ下','boots']], prompt: 'clothes' %>
      <%= f.select :color, [['赤', 'red'], ['青','blue'], ['黄','yellow'], ['緑', 'green'], ['黒','black'], ['灰','gray'], ['白', 'white']], prompt: 'color' %>
      <%= f.submit 'Submit', class: "btn btn-primary submit" %>
    <% end %>
  </div>
</section>
